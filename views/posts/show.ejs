<div class="container" style="max-width: 850px; margin: auto;">
    <div class="cs-blog-detail" >
        <div class="cs-post-title" style="display: flex; justify-items: center; justify-content: space-between">
            <a class="back-btn" href="/" style="text-decoration: none; color: #11364c; font-size: 13px; font-weight: 600; font-family: 'Open Sans','sans-serif';">
                <%- include('../partials/icons/back-arrow') %>
                <span>Back</span>
            </a>
        </div>
        <div class="cs-post-option-panel" >
            <div class="rich-editor-text">
                <h3><%= post.title %></h3>
                <p>
                    <%= post.excerpt %>
                </p>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <blockquote class="text-left-align" style="background: #f8feff; border-left-color: #038dd7">
                        <span style="color: #21475f;">
                         <%= post.body%>
                        </span>
                        <span class="author-name"><a href="#">-- Robert Deneairo</a></span>
                        <span class="author-name"><time style="font-size: 10px;"><i class="cs-color icon-calendar6"></i><%=  moment(post.createdAt).format('dd MMMM yy HH:mm:ss') %></time> <a href="#"></a></span>
                    </blockquote>
                </div>

            </div>
        </div>
    </div>
</div>